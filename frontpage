<div class="container" role="main" aria-label="Launching Soon Subscription Form">
  <h1>Launching Soon!</h1>
  <p>Be the first to know when we launch. Sign up below to stay updated.</p>

  <form id="launchForm" novalidate>
    <input type="text" id="name" name="name" placeholder="Your Name" required aria-required="true" aria-label="Name" />
    <input type="email" id="email" name="email" placeholder="Your Email" required aria-required="true" aria-label="Email" />
    <button type="submit">Notify Me</button>
    <div class="success-message" role="alert" id="successMsg">Thank you! We will keep you posted.</div>
  </form>
</div>

<script>
  const form = document.getElementById('launchForm');
  const successMsg = document.getElementById('successMsg');

  form.addEventListener('submit', e => {
    e.preventDefault();

    const name = form.name.value.trim();
    const email = form.email.value.trim();

    if (!name) {
      alert('Please enter your name.');
      form.name.focus();
      return;
    }

    if (!email || !validateEmail(email)) {
      alert('Please enter a valid email address.');
      form.email.focus();
      return;
    }

    // Here you can add your form submission logic (send to server, API, etc.)

    successMsg.style.display = 'block';
    form.reset();
  });

  function validateEmail(email) {
    // Simple email regex
    return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
  }
</script>

