{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },

    "posts": {
      ".read": "auth != null",
      "$postId": {
        ".write": "auth != null && (!data.exists() || data.child('userId').val() === auth.uid || root.child('admin').child(auth.uid).exists())",
        "userId": {
          ".validate": "newData.isString() && newData.val() === auth.uid"
        },
        "caption": {
          ".validate": "newData.isString() && newData.val().length <= 500"
        },
        "ipfsHash": {
          ".validate": "newData.isString() && newData.val().length > 20"
        },
        "mediaMimeType": {
          ".validate": "newData.isString() && newData.val().length < 100"
        },
        "mediaType": {
          ".validate": "newData.isString()"
        },
        "timestamp": {
          ".validate": "newData.isNumber()"
        },
        "likesCount": {
          ".validate": "newData.isNumber()"
        },
        "commentsCount": {
          ".validate": "newData.isNumber()"
        },

        "boostedBy": {
          ".write": "auth != null && root.child('admin').child(auth.uid).exists()",
          ".validate": "newData.val() === null || newData.hasChildren()"
        },
        "boostsCount": {
          ".write": "auth != null && root.child('admin').child(auth.uid).exists()",
          ".validate": "newData.isNumber()"
        }
      }
    },

    "comments": {
      "$postId": {
        ".read": "auth != null",
        "$commentId": {
          ".write": "auth != null && (!data.exists() || data.child('userId').val() === auth.uid || root.child('admin').child(auth.uid).exists())",
          ".validate": "newData.hasChildren(['userId', 'text', 'timestamp'])",
          "userId": {
            ".validate": "newData.isString() && newData.val() === auth.uid"
          },
          "text": {
            ".validate": "newData.isString() && newData.val().length <= 300"
          },
          "timestamp": {
            ".validate": "newData.isNumber()"
          }
        }
      }
    },

    "likes": {
      "$postId": {
        "$uid": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid === $uid",
          ".validate": "newData.isBoolean()"
        }
      }
    },

    "admin": {
      ".read": "auth != null", 
      ".write": "auth != null && root.child('admin').child(auth.uid).exists()",
      "$uid": {
        ".validate": "newData.isBoolean()"
      }
    },

    "userVerifications": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid",

        "verificationStatus": {
          ".write": "auth != null && root.child('admin').child(auth.uid).exists()"
        },
        "reviewedAt": {
          ".write": "auth != null && root.child('admin').child(auth.uid).exists()"
        }
      }
    }
  }
}
